{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",

    "lib": ["ESNext"],
    "declaration": false,

    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": true,

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}
